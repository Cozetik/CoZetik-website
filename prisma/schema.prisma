generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     @default(SUPER_ADMIN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String?
  imageUrl    String?
  visible     Boolean     @default(true)
  order       Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  formations  Formation[]
}

model Formation {
  id           String                 @id @default(cuid())
  title        String
  slug         String                 @unique
  description  String
  program      String
  price        Float?
  duration     String?
  imageUrl     String?
  visible      Boolean                @default(true)
  order        Int                    @default(0)
  categoryId   String
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt

  // New fields for immersive page
  level          String?   // "Débutant", "Intermédiaire", "Expert"
  maxStudents    Int?      // Ex: 24
  prerequisites  String?   // "Aucun prérequis" ou détails
  objectives     String[]  // Array : ["Automatiser tâches", "Créer workflows"]
  isCertified    Boolean   @default(false)
  rating         Float?    @default(0) // 4.8
  reviewsCount   Int       @default(0) // 124
  studentsCount  Int       @default(0) // 500
  isFlexible     Boolean   @default(true) // Rythme flexible ?

  category     Category               @relation(fields: [categoryId], references: [id])
  sessions     FormationSession[]
  inscriptions FormationInscription[]
  steps        FormationStep[]
  faqs         FormationFAQ[]
}

model FormationSession {
  id          String    @id @default(cuid())
  formationId String
  startDate   DateTime
  endDate     DateTime
  location    String?
  maxSeats    Int?
  available   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  formation   Formation @relation(fields: [formationId], references: [id], onDelete: Cascade)
}

model Partner {
  id          String   @id @default(cuid())
  name        String
  description String?
  logoUrl     String?
  websiteUrl  String?
  visible     Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BlogPost {
  id             String    @id @default(cuid())
  title          String
  slug           String    @unique
  content        String
  excerpt        String?
  imageUrl       String?
  visible        Boolean   @default(false)
  publishedAt    DateTime?
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  themes Theme[]
}

model Theme {
  id    String     @id @default(cuid())
  name  String     @unique
  slug  String     @unique
  posts BlogPost[]
}

model ContactRequest {
  id        String        @id @default(cuid())
  name      String
  email     String
  message   String
  status    RequestStatus @default(NEW)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("contact_requests")
}

model FormationInscription {
  id          String        @id @default(cuid())
  name        String
  email       String
  phone       String
  message     String        @db.Text
  formationId String
  status      RequestStatus @default(NEW)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  formation   Formation     @relation(fields: [formationId], references: [id])

  @@map("formation_inscriptions")
}

enum Role {
  SUPER_ADMIN
}

enum RequestStatus {
  NEW
  TREATED
  ARCHIVED
}

// FormationStep model for pedagogical steps carousel
model FormationStep {
  id          String @id @default(cuid())
  formationId String
  formation   Formation @relation(fields: [formationId], references: [id], onDelete: Cascade)

  order       Int      // 1, 2, 3...
  title       String   // "Fondamentaux de l'IA"
  description String   // Description détaillée
  duration    String?  // "2 heures"
  keyPoints   String[] // ["Comprendre IA", "Cas d'usage", "Outils"]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([formationId, order])
  @@index([formationId])
}

// FormationFAQ model for frequently asked questions
model FormationFAQ {
  id          String @id @default(cuid())
  formationId String
  formation   Formation @relation(fields: [formationId], references: [id], onDelete: Cascade)

  order    Int
  question String   // FAQ question
  answer   String   // FAQ answer

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([formationId, order])
  @@index([formationId])
}
